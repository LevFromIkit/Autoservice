<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".zapisView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:title="Данные заявки"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/nameClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp" />

            <TextView
                android:id="@+id/nameService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lastName"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/clientDescribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/engineerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/engineerDescribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/speciality"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"/>


            <TextView
                android:id="@+id/carDescribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/speciality"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"/>

            <TextView
                android:id="@+id/carProbeg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:paddingEnd="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/delete" />

            <EditText
                android:id="@+id/carDescribeEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Введите модель авто" />

            <EditText
                android:id="@+id/carProbegEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Введите пробег авто"/>

            <EditText
                android:id="@+id/engineerDescribeEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Введите замечания к заявке" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>